{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/views/**",
      "use": "@vercel/static"
    },
    {
      "src": "frontend/public/**",
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index.js"
    },
    {
      "source": "/(.*\\.(?:js|css|jpg|jpeg|png|gif|ico|svg|woff|woff2|ttf|eot))",
      "has": [
        {
          "type": "header",
          "key": "accept",
          "value": ".*"
        }
      ],
      "destination": "/frontend/public/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/frontend/views/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}